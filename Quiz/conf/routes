# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.StartController.redirect()

# Auth
GET		/login						controllers.LoginController.login()
POST	/login						controllers.LoginController.authenticate()
GET		/logout						controllers.LoginController.logout()

# Question
# GET		/question/chapters/:grade/:subject		controllers.QuestionController.getChapters(grade: String, subject: String)
POST	/question								controllers.QuestionController.submit()
GET		/question/edit/:id						controllers.QuestionController.edit(id: Long)
GET		/question/delete/:id					controllers.QuestionController.delete(id: Long)

# Test data fill
GET		/data						controllers.TestDataController.fill()

# Admin
GET		/adminHome					controllers.AdminController.adminHome()
GET		/adminQuestion				controllers.AdminController.adminQuestion()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
